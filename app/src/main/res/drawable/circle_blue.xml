<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle (stroke) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/_2sdp"
                android:color="#238EED" />
        </shape>
    </item>

    <!-- Inner circle (fill color) -->
    <item android:top="@dimen/_2sdp" android:right="@dimen/_2sdp" android:bottom="@dimen/_2sdp" android:left="@dimen/_2sdp">
        <shape android:shape="oval">
            <solid android:color="#238EED" />
        </shape>
    </item>

</layer-list>





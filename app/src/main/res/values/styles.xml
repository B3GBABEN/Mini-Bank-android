<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menuDashboardItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="background">@drawable/button_menu_theme</item>
    </style>

    <style name="blockViewTitle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="tabLayoutItem">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="tabLayoutSelectedItem">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="floatingButtonMenuTheme">
        <item name="android:background">@drawable/button_floating_menu_theme</item>
        <item name="android:drawablePadding">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="NavigationTheme" >
        <item name="listPreferredItemHeightSmall">40dp</item>
    </style>
</resources>